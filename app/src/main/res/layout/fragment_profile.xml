<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".ProfileFragment">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/editAction"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/edit"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:layout_gravity="start"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/logOutAction"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/log_out"
                android:paddingEnd="15dp"
                android:paddingTop="15dp"
                android:layout_gravity="end"
                />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="1000dp"
            >
            <ImageView
                android:id="@+id/AvatarProfile"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/rounded_relative"
                android:scaleType="centerCrop"
                >

            </ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/fullnameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ФИО"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Руководитель:"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/white"
            android:layout_gravity="start"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/textFullnameRuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25dp"
            android:textColor="@color/white"
            android:layout_gravity="start"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cроки:"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:layout_gravity="start"
            android:layout_marginStart="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/textTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25dp"
            android:textColor="@color/white"
            android:layout_gravity="start"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Задачи:"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:layout_marginStart="25dp"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/textExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25dp"
            android:textColor="@color/white"
            android:layout_gravity="start"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            />
    </LinearLayout>
</ScrollView>